{
  "manifest_version": 2,

  "name": "LoremGen",
  "description": "Get your every day lorem ipsum text faster.",
  "version": "1.13",
  "author": "Colin Espinas",

  "icons": {
    "16": "ressources/icons/icon16.png",
    "32": "ressources/icons/icon32.png",
    "48": "ressources/icons/icon48.png",
    "128": "ressources/icons/icon128.png"
  },

  "background": {
    "scripts": ["js/jquery-3.3.1.min.js","js/background.js"],
    "persistent": true
  },

  "browser_action": {
    "default_title": "LoremGen",
    "default_icon": {
      "16": "ressources/icons/icon16.png",
      "32": "ressources/icons/icon32.png",
      "48": "ressources/icons/icon48.png",
      "128": "ressources/icons/icon128.png"
    },
    "default_popup": "index.html"
  },
  "permissions": [
    "storage"
  ]
}